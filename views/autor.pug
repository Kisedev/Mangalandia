extends layout

block content
    .main
        .card
            .card-header.
                Mangaká
            .card-body
                .d-flex.align-items-center.justify-content-between
                    h5.card-title= autor.nome
                    small= autor.nasc
                hr
                .card-text
                    each manga in autor_mangas
                        details
                            summary= manga.titulo
                            p= manga.sumario
                    else
                        p.lead Este mangaká ainda não tem mangás ¯\_(ツ)_/¯
            .card-footer
                .btn-toolbar(role='toolbar' aria-label='Opções do Autor')
                    .btn-group(role='group' aria-label='Autor Controles')
                        a.btn.btn-outline-secondary(href=autor.url+'/atualizar') Editar
                        a.btn.btn-outline-danger(href=autor.url+'/remover') Remover