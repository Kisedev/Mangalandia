extends layout

block content
    h2= autor.nome
    p #{autor.nasc}
    
    hr
    .btn-group(role='group' aria-label='Autor controles')
        a.btn.btn-outline-danger(href=autor.url+'/remover') Remover

    div.ml-3.mt-3
        h4 Mangás
        dl
            each manga in autor_mangas
                dt
                    a(href=manga.url) #{manga.titulo}
                dd  #{manga.sumario}
            else
                p.lead Não encontrei nenhum mangá ¯\_(ツ)_/¯